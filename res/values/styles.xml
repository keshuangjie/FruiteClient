<resources>

    <!--&lt;!&ndash; Base application theme. &ndash;&gt;-->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--<item name="android:actionBarDivider">@null</item>-->
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <!--         <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item> -->
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBars</item>
        <item name="android:actionMenuTextColor">@color/custom_white</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarDivider">@null</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <!--         <item name="actionBarTabStyle">@style/MyActionBarTabs</item> -->
        <item name="actionBarTabBarStyle">@style/MyActionBarTabBars</item>
        <item name="actionMenuTextColor">@color/custom_white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">#00d5b9</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <!--<item name="android:backgroundStacked">@android:color/holo_green_dark</item>-->

        <!-- Support library compatibility -->
        <item name="background">@color/title_bar</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <!--<item name="backgroundStacked">@android:color/holo_green_dark</item>-->
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/custom_white</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/custom_white</item>
    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!--<item name="android:background">@drawable/tab_indicator_ab_example</item>-->
    </style>

    <style name="MyActionBarTabBars" parent="@style/Widget.AppCompat.ActionBar.TabBar">

        <item name="android:showDividers">none</item>

    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- common ProgressDialog -->
    <style name="comm_progressdlg">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="theme_comm_progressdlg" parent="@style/comm_progressdlg">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="pull_to_refresh_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#75706a</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="pull_to_refresh_subtext_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#75706a</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lib_story_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">0.6dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbars">none</item>
        <item name="android:animationCache">false</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:smoothScrollbar">false</item>
    </style>

    <style name="list_divider">
        <item name="android:background">@color/list_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="text_main_title">
        <item name="android:textColor">#353535</item>
        <item name="android:textSize">@dimen/text_font_size_middle</item>
    </style>

    <style name="text_main_title_small">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:textColor">#353535</item>
    </style>


    <style name="text_content">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_font_size_normal</item>
    </style>

    <style name="button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/custom_white</item>
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>
