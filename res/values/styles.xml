<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- common ProgressDialog -->
    <style name="comm_progressdlg">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="theme_comm_progressdlg" parent="@style/comm_progressdlg">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="pull_to_refresh_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#75706a</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="pull_to_refresh_subtext_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#75706a</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lib_story_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">#c0c0c0</item>
        <item name="android:dividerHeight">.6dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbars">none</item>
        <item name="android:animationCache">false</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:smoothScrollbar">false</item>
    </style>

</resources>
