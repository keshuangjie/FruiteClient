<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.shopping.fruit.client.widget.TabGroupView
        android:id="@+id/item_tab_group"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/custom_white" >

        <!-- tab布局 -->
        <LinearLayout
            android:id="@+id/item_tab_linearLayout_0"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_home_bottom_shop" >
            </ImageView>
        </LinearLayout>
        
        <!-- tab布局 -->
        <LinearLayout
            android:id="@+id/item_tab_linearLayout_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_home_bottom_order" >
            </ImageView>
        </LinearLayout>
        
        <!-- tab布局 -->
        <LinearLayout
            android:id="@+id/item_tab_linearLayout_2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_home_bottom_user" >
            </ImageView>
        </LinearLayout>

    </com.shopping.fruit.client.widget.TabGroupView>

</merge>