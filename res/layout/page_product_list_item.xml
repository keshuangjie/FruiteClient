<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/im_head"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/tv_price"
        style="@style/text_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/im_head"
        android:singleLine="true"
        android:text="10$/斤"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/text_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/im_head"
        android:layout_toLeftOf="@id/tv_price"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="3dip"
        android:text="苹果"/>

    <TextView
        android:id="@+id/tv_totalSold"
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/im_head"
        android:layout_below="@id/tv_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="3dip"
        android:text="已售出1000份"/>

    <TextView
        android:id="@+id/tv_description"
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/im_head"
        android:layout_below="@id/tv_totalSold"
        android:layout_toLeftOf="@id/tv_price"
        android:layout_marginRight="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="国外进口的苹果，又香又甜又脆国外进口的苹果，又香又甜又脆"/>

    <include
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dip"
        layout="@layout/item_plus_widget"/>

</RelativeLayout>