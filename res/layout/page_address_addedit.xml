<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<include layout="@layout/activity_edit_address_actionbar" />-->
    <ScrollView android:background="#ffeef0f1" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/global_border_topbottom"
                android:paddingLeft="12dip" android:paddingRight="12dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/custom_item_topgap" android:layout_marginBottom="@dimen/custom_item_gap">
                <TextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:gravity="center|left" android:id="@+id/contact_lable" android:layout_width="wrap_content" android:layout_height="@dimen/custom_item_height_contact" android:layout_marginRight="@dimen/address_add_label_padding" android:text="联系人" android:layout_alignParentLeft="true" />
                <FrameLayout android:id="@+id/contact_text" android:layout_width="wrap_content" android:layout_height="@dimen/custom_item_height_contact" android:layout_weight="1.0" android:layout_toRightOf="@id/contact_lable" android:layout_alignParentRight="true">
                    <AutoCompleteTextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:textColorHint="@color/custom_hint" android:id="@+id/address_username" android:background="@null" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="30.0dip" android:hint="您的姓名" />
                    <ImageView android:layout_gravity="center|right" android:id="@+id/address_username_del" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/address_add_label_padding" android:src="@drawable/icon_delete_normal" />
                </FrameLayout>
                <View android:id="@+id/divider_line3" android:layout_below="@id/contact_lable" style="@style/list_divider" />
                <TextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:gravity="center|left" android:id="@+id/phone_text" android:layout_width="@dimen/address_add_label_width" android:layout_height="@dimen/custom_item_height" android:layout_marginRight="@dimen/address_add_label_padding" android:text="手机" android:layout_below="@id/divider_line3" />
                <FrameLayout android:layout_width="fill_parent" android:layout_height="@dimen/custom_item_height" android:layout_weight="1.0" android:layout_toRightOf="@id/phone_text" android:layout_below="@id/divider_line3">
                    <AutoCompleteTextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:textColorHint="@color/custom_hint" android:id="@+id/address_userphone" android:background="@null" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="30.0dip" android:text="" android:hint="配送人员联系您的方式" android:maxLength="11" android:numeric="integer" />
                    <ImageView android:layout_gravity="center|right" android:id="@+id/address_userphone_del" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/address_add_label_padding" android:src="@drawable/icon_delete_normal" />
                </FrameLayout>
                <View android:id="@+id/divider_line0" style="@style/list_divider" android:layout_below="@id/phone_text" />
                <!--<RadioGroup android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/address_usersex_container" android:layout_width="fill_parent" android:layout_height="@dimen/custom_item_height" android:layout_below="@id/contact_lable" android:layout_alignLeft="@id/map_choose_dot">-->
                    <!--<RadioButton android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:gravity="center|left" android:layout_gravity="center|left" android:id="@+id/address_usersex_male" android:layout_width="0.0dip" android:layout_height="wrap_content" android:checked="true" android:button="@drawable/button_radio" android:text="  先生" android:layout_weight="1.0" />-->
                    <!--<RadioButton android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:gravity="center|left" android:layout_gravity="center|right" android:id="@+id/address_usersex_female" android:layout_width="0.0dip" android:layout_height="wrap_content" android:button="@drawable/button_radio" android:text="  女士" android:layout_weight="1.0" />-->
                <!--</RadioGroup>-->
                <!--<View android:id="@+id/divider_line1" android:layout_below="@id/address_usersex_container" style="@style/list_divider" />-->
                <TextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:gravity="center|left" android:id="@+id/address_text1" android:layout_width="wrap_content" android:layout_height="@dimen/custom_item_height" android:layout_marginRight="@dimen/address_add_label_padding" android:text="收餐地址" android:layout_below="@id/divider_line0" android:layout_alignParentLeft="true" />
                <ImageView android:id="@+id/map_choose_dot" android:layout_width="wrap_content" android:layout_height="@dimen/custom_item_height" android:layout_marginRight="6.0dip" android:src="@drawable/receive_address_loc_icon" android:scaleType="centerInside" android:layout_toRightOf="@id/address_text1" android:layout_below="@id/divider_line0" />
                <FrameLayout android:id="@+id/address_useraddress_container" android:layout_width="fill_parent" android:layout_height="@dimen/custom_item_height" android:minHeight="@dimen/custom_item_height" android:layout_weight="1.0" android:layout_toRightOf="@id/map_choose_dot" android:layout_below="@id/divider_line0">
                    <AutoCompleteTextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:textColorHint="@color/custom_hint" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/address_useraddress" android:background="@null" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="20.0dip"
                        android:hint="请选择小区、大厦或学校" />
                    <ImageView android:layout_gravity="center|right" android:id="@+id/address_useraddress_pos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5.0dip" android:src="@drawable/mypage_list_icon_arrow" />
                </FrameLayout>
                <View android:id="@+id/split_line" android:layout_below="@id/address_text1" style="@style/list_divider" />
                <TextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:gravity="center|left" android:id="@+id/address_text2" android:layout_width="wrap_content" android:layout_height="@dimen/custom_item_height" android:layout_marginRight="@dimen/address_add_label_padding" android:text="门牌号" android:layout_below="@id/split_line" />
                <FrameLayout android:layout_width="fill_parent" android:layout_height="@dimen/custom_item_height" android:layout_toRightOf="@id/address_text2" android:layout_below="@id/split_line" android:layout_alignLeft="@id/map_choose_dot">
                    <AutoCompleteTextView android:textSize="@dimen/text_font_size_middle" android:textColor="@color/custom_title" android:textColorHint="@color/custom_hint" android:id="@+id/detail_useraddress" android:background="@null" android:layout_width="fill_parent" android:layout_height="@dimen/custom_item_height" android:layout_marginRight="30.0dip"
                        android:hint="请输入门牌号等详细信息" />
                    <ImageView android:layout_gravity="center|right" android:id="@+id/address_useraddress_del" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/address_add_label_padding" android:src="@drawable/icon_delete_normal" />
                </FrameLayout>
            </RelativeLayout>
            <!--<TextView android:textColor="@color/custom_input" android:id="@+id/address_delete" android:background="@drawable/global_item_pressed_selector" android:clickable="true" android:text="删除该地址" style="@style/CustomItem" />-->
            <Button
                android:id="@+id/btn_del"
                style="@style/button"
                android:layout_gravity="center_horizontal"
                android:text="删除地址"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>